sed -i "s/$private_ip 1194 udp/$pip_1194_udp 1194 udp/g" $clientvm_ovpn_file
sed -i "s/$private_ip 9443 tcp/$pip_9443_tcp 9443 tcp/g" $clientvm_ovpn_file

# Client file for VM (using cluster IPs)
