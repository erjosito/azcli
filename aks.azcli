sed -i "s/$private_ip 1194 udp/$clusterip_1194_udp 1194 udp/g" $clientpod_ovpn_file
sed -i "s/$private_ip 9443 tcp/$clusterip_9443_tcp 9443 tcp/g" $clientpod_ovpn_file

