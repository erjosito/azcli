    if [[ "$network_policy" != "cilium" ]]; then
        echo "ERROR: Network policy must be cilium when using azure_cilium. Setting network policy to cilium..."
        network_policy=cilium
    fi
elif [[ "$network_plugin" == 'azure_overlay' ]]; then
