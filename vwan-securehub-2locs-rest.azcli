    --public-ip-address "" --vnet-name spoke1-$location1 --vnet-address-prefix $spoke1_prefix \
    --subnet vm --subnet-address-prefix $spoke1_subnet --private-ip-address $spoke1_vm_ip --no-wait

# Test VM in spoke2 (no PIP)
