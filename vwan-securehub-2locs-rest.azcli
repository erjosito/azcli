ssh -J $spoke3_jump_pip $spoke3_vm_ip "ip a"
ssh-keyscan -H $spoke4_vm_ip >> ~/.ssh/known_hosts
ssh -J $spoke4_jump_pip $spoke4_vm_ip "ip a"

